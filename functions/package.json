{
  "name": "functions",
  "private": true,
  "scripts": {
    "lint": "npx tslint --project tsconfig.json",
    "build": "npx tsc",
    "build-watch": "npx tsc -w",
    "serve": "npm run build && firebase serve --only functions",
    "serve-only": "export GOOGLE_APPLICATION_CREDENTIALS='../octalogic-portfolio-dev-firebase.json' && firebase -P default serve",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy",
    "logs": "firebase functions:log",
    "deploy-firestore-rules-only": "firebase deploy --only firestore:rules"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.3.0",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "multer": "github:emadalam/multer",
    "nanoid": "^2.1.8",
    "ua-parser-js": "^0.7.24",
    "uuid": "^3.3.3",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/module-alias": "^2.0.0",
    "@types/multer": "^1.3.10",
    "@types/nanoid": "^2.1.0",
    "@types/ua-parser-js": "^0.7.33",
    "@types/uuid": "^3.4.6",
    "@types/yup": "^0.26.27",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts}": [
        "npx tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./public",
      "./environment",
      "./node_modules",
      "./dist",
      "./coverage"
    ]
  },
  "_moduleAliases": {
    "~controllers": "lib/controllers",
    "~models": "lib/models",
    "~repository": "lib/repository",
    "~schemas": "lib/schemas",
    "~utils": "lib/utils",
    "~middlewares": "lib/middlewares",
    "~exceptions": "lib/exceptions",
    "~interfaces": "lib/interfaces"
  }
}
